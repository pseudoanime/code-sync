{
	"Bootstrap input": {
		"prefix": "bstext",
		"body": [
			"<div class=\"form-group\">",
			"\t<label for=\"${1:name}\">${1:name}:</label>",
			"\t<input type=\"text\" name=\"${1:name}\" id=\"${1:name}\" class=\"form-control\" placeholder=\"${1:name}\">",
			"</div>"
		],
		"description": "Bootstrap text area"
	},
	"Bootstrap textarea": {
		"prefix": "bstextarea",
		"body": [
			"<div class=\"form-group\">",
			"\t<label for=\"${1:name}\">${1:name}:</label>",
			"\t<textarea name=\"${1:name}\" id=\"${1:name}\" class=\"form-control\"></textarea>",
			"</div>"
		],
		"description": "Bootstrap text area"
	},
	"Bootstrap button": {
		"prefix": "bsbutton",
		"body": [
			"<button type=\"submit\" class=\"btn btn-default\">${1:buttontext}</button>",
		],
		"description": "Bootstrap text area"
	},
}